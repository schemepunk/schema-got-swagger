              "target": {
                "type": "string"
              },
              "plugin": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "destination": {
            "type": "object",
            "properties": {
              "target": {
                "type": "string"
              },
              "plugin": {
                "type": "string"
              }
            },
            "additionalProperties": true
          },
          "holdOvers": {
            "type": "object",
            "properties": {
              "src": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
